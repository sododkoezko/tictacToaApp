<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banner"
    tools:context=".fiche">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="385dp"
        android:layout_height="678dp"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fichier d'analyse"
            android:textColor="#257C12"
            android:textSize="34sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="550dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:text="phone" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:boxBackgroundColor="#00FFFFFF"
                    app:boxBackgroundMode="outline"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/purple_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Entré la contité" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:text="L'état de santé" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:boxBackgroundColor="#00FFFFFF"
                    app:boxBackgroundMode="outline"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/purple_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/santé"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Entré la contité" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:layout_weight="1"
                    android:text="le nombre de globule blancs" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:boxBackgroundColor="#00FFFFFF"
                    app:boxBackgroundMode="outline"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/purple_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/globileb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Entré la contité" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-15dp"
                    android:layout_weight="1"

                    android:text="le nombre de globule rouge" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:boxBackgroundColor="#00FFFFFF"
                    app:boxBackgroundMode="outline"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/purple_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/démog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Entré la contité" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:text="Contité d'hémoglobine" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:boxBackgroundColor="#00FFFFFF"
                    app:boxBackgroundMode="outline"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/purple_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/démog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Entré la contité" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-15dp"
                    android:layout_weight="1"
                    android:text="Contité d'hématocrite" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:boxBackgroundColor="#00FFFFFF"
                    app:boxBackgroundMode="outline"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/purple_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/déma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Entré la contité" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:text="Acceptation" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:boxBackgroundColor="#00FFFFFF"
                    app:boxBackgroundMode="outline"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/purple_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/accép"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Entré la contité" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="80dp"
                android:text="Evoyer" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>