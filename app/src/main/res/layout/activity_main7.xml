<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#568A8686"
    tools:context=".MainActivity7">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="363dp"
        android:layout_height="280dp"
        android:background="#FFFFFF"
        android:scrollbarSize="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/group11"
        android:layout_width="211dp"
        android:layout_height="389dp"

        android:layout_marginTop="250dp"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <RadioButton
            android:id="@+id/f1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08:00-09:00"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/f2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="09:00-10:00"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/f3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10:00-11:00"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/f4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11:00-12:00"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/f5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:00-13:00"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/f6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="13:00-14:00"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/f7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:00-15:00"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/f8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15:00-16:00"
            android:textColor="#000000"
            tools:ignore="TouchTargetSizeCheck" />
    </RadioGroup>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />
</androidx.constraintlayout.widget.ConstraintLayout>